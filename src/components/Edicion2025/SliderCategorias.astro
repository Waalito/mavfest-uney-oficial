<style>
    .card {
  width: 100%;
  height: 100%;
  padding: 15px;
  border: 2px solid var(--color-mav-orange);
  border-radius: 8px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  color: var(--color-mav-black);
  font-weight: 800;
  text-align: center;
}

.card h4 {
  font-size: 0.7rem;
}

/* --- Nuevo Tiempo de Duraci贸n (Duraci贸n Lenta) --- */
:root {
    --animation-duration: 30s; /* M谩s lento que 10s o 15s */
}

/* --- Nuevo Tiempo de Duraci贸n (Mantenido) --- */
:root {
    --animation-duration: 30s; 
}

/* 1. La ventana deslizante */
.slider {
    width: 100%;
    height: var(--height);
    overflow: hidden;
    mask-image: linear-gradient(to right, transparent, #000 10% 90%, transparent);
}

/* 2. El listado (contenedor) */
.slider .list {
    display: flex;
    width: 100%; 
    min-width: calc(var(--width) * var(--quantity));
    position: relative;
}

/* 3. El tem Individual (Ajuste Clave) */
.slider .list .item {
    width: var(--width);
    height: var(--height);
    position: absolute;
    animation: autoRun var(--animation-duration) linear infinite; 
    transition: filter 0.5s;
    
    /*  ELIMINAMOS EL !important aqu铆 para que el :hover pueda sobrescribir el estado de la animaci贸n. */
    animation-delay: calc(
        (var(--animation-duration) / var(--quantity)) * (var(--position) - var(--quantity))
    ); /* 隆Sin !important! */
}

/* 4. Keyframes para el Movimiento (Correctos) */
@keyframes autoRun {
    from {
        left: 100%; 
    }
    to {
        left: calc(var(--width) * -1); 
    }
}

/* 5. REGLAS DE PAUSA (NO NECESITAN CAMBIO) */
/* Estas reglas ahora pueden funcionar correctamente porque el delay ya no es !important */
.slider:hover .item {
    /* Soluci贸n aplicada aqu铆 */
    animation-play-state: paused !important; 
    filter: grayscale(1);
    
}
.slider .item:hover {
    filter: grayscale(0);
}

/* 6. Keyframes para el Modo Reversa */
.slider[reverse="true"] .item {
    animation: reversePlay var(--animation-duration) linear infinite;
    /* ELIMINAMOS EL !important tambi茅n aqu铆 */
    animation-delay: calc(
        (var(--animation-duration) / var(--quantity)) * (var(--position) - var(--quantity))
    ); /* 隆Sin !important! */
}
@keyframes reversePlay {
    from {
        left: calc(var(--width) * -1);
    }
    to {
        left: 100%;
    }
}

</style>

