<div class="fixed -top-1/2 -bottom-1/2 -left-1/2 -right-1/2  w-[200%] h-[200vh] bg-repeat bg-transparent contrast-125 brightness-150"></div>

<style>
    div {
    background-image: url('/images/grainTexture(1).webp');
    
    background-size: contain;
    user-select: none;
    mix-blend-mode: overlay;
    opacity: 0.4;
  
    pointer-events: none;
    overflow-x: hidden;
    animation: grain 0.2s infinite;
    }

    @keyframes grain {
        0%, 100% {
            transform: translate(0, 0);
        }
        10% {
            transform: translate(-5%, -10%);
        }
        20% {
            transform: translate(-15%, 5%);
        }
        30% {
            transform: translate(7%, -25%);
        }
        40% {
            transform: translate(-5%, 25%);
        }
        50% {
            transform: translate(-15%, 10%);
        }
        60% {
            transform: translate(15%, 0);
        }
        70% {
            transform: translate(0, 15%);
        }
        80% {
            transform: translate(3%, 10%);
        }
        90% {
            transform: translate(-10%, 5%);
        }
    }
</style>
  
