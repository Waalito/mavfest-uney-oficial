---
import LogoMavfest from '../assets/svg/LogoMavfest.svg';
---

<header class="fixed top-0 left-0 w-full flex items-center justify-center py-2 z-999999">
    <a 
    class="hover:scale-105 transition-transform duration-300 ease-in-out text-amber-20"
    href="#" 
    target="_blank" 
    rel="noopener noreferrer"
    >
       <LogoMavfest />
    </a>
</header>

<style>
    header {

        border-bottom: 1px solid transparent;
        background: transparent;
        animation: header-blur-scroll 0.3s linear both;
        animation-timeline: scroll();
        animation-range: 0 250px;
    }

    @keyframes header-blur-scroll {
  0% {
    backdrop-filter: blur(0px);
    background: transparent;
  }
  100% {
    backdrop-filter: blur(10px);
    background-color: rgba(242, 242, 242, 0.4);
    padding-bottom: 6px;
  }
}
</style>