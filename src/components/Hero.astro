<section class=" w-full">
    <figure class="w-full absolute top-0 left-0 h-full flex items-center justify-center">
        <img src="/images/mavVFX-big.png" alt="Logotema Mavfest 2025" >
    </figure>

    <div class=" w-full h-screen gap-4 flex flex-col items-center justify-center z-10">
        <h1 class= "text-6xl font-black text-mav-orange uppercase -tracking-widest text-center relative animate-blurred-fade-in animation-delay-150" >
            Nov9no <span class=" ml-28 lg:ml-52">Festival</span>
        </h1>
        
        <div class=" h-14 top-76 md:max-top-46  lg:top-96 relative">
            <h6 class="text-4xl uppercase text-mav-orange font-black -tracking-wider text-center animate-fade-in-down animation-delay-900">
                proximamente
            </h6>
         <a 
        class="flex items-center justify-center italic h-full text-mav-gray font-bold text-sm hover:text-mav-black transition-colors duration-300 ease-in-out"
        href="https://www.instagram.com/mav.fest.uney"
        target="_blank"
        rel="noopener noreferrer">
            @mav.fest.uney
            </a>
        </div>
    </div>

</section>


<style>

    h1::before {
        content: "NOV9NO";
        position: absolute;
        top: 150px;
        left: -150px;
        font-size: 0.9rem;
        letter-spacing: 0;
        color: #1e1e1e;
        font-weight: 800;
        text-transform: lowercase;
    }

    h1::after {
        content: "FESTIVAL";
        position: absolute;
