---
import LogoMavfest from '@/icons/LogoMavfest.astro';

---

 <header class="fixed top-0 left-0 w-full flex items-center justify-between gap-4 py-2 z-999999 px-6">

  
  <a 
    class="hover:scale-105 transition-transform duration-300 ease-in-out text-mav-gray"
    href="/" 
    rel="noopener noreferrer"
    >
       <LogoMavfest />
    </a>


    <div class=" flex flex-row justify-center items-center gap-2.5">

 
    <a 
    class="hover:text-mav-gray hover:scale-105 transition-transform duration-300 ease-in-out font-black uppercase -tracking-wider text-mav-gray/50 "
    href="/ganadores2025" 
    rel="noopener noreferrer"
    >
       Edici√≥n 2025
    </a>
 

    <a 
    class="hover:text-mav-gray hover:scale-105 transition duration-300 ease-in-out font-black uppercase -tracking-wider text-mav-gray/50"
    href="/FAQs" 
    rel="noopener noreferrer"
    >
       FAQ's
    </a>
       </div>

 
</header> 

<style>
    header {

        border-bottom: 1px solid transparent;
        background: transparent;
        animation: header-blur-scroll 0.3s linear both;
        animation-timeline: scroll();
        animation-range: 0 250px;
    }

    @keyframes header-blur-scroll {
  0% {
    backdrop-filter: blur(0px);
    background: transparent;
  }
  100% {
    backdrop-filter: blur(10px);
    background-color: rgba(242, 242, 242, 0.4);
    padding-bottom: 6px;
  }
}
</style>