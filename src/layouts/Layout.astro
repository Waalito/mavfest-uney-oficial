---
// Supports weights 100-900
import '@fontsource-variable/inter';
import '@fontsource/the-nautigal';
import Header from '@/components/Sections/Header.astro';
import Footer from "@/components/Sections/Footer.astro";
import GrainTexture from '@/components/GrainTexture.astro';
import MetalTexture from '@/components/MetalTexture.astro';
import GrungeTexture from '@/components/GrungeTexture.astro';

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/mav-favicon.svg" />
    <!-- HTML Meta Tags -->
<title>{title}</title>
<meta name="description" content="MavFest 2025 es la 9ª edición del Festival de Cortometrajes de la UNEY que celebra la creatividad y el talento de la comunidad universitaria.">



<!-- Facebook Meta Tags -->
<meta property="og:url" content="https://mavfest-uney.netlify.app">
<meta property="og:type" content="website">
<meta property="og:title" content="MavFest 2025 | Festival de Cortometrajes">
<meta property="og:description" content="MavFest 2025 es la 9ª edición del Festival de Cortometrajes de la UNEY que celebra la creatividad y el talento de la comunidad universitaria.">
<meta property="og:image" content="https://github.com/Waalito/mavfest-uney-oficial/blob/main/public/images/banner-mavfest.webp?raw=true">

<!-- Twitter Meta Tags -->
<meta name="twitter:card" content="summary_large_image">
<meta property="twitter:domain" content="Únete a la celebración de la creatividad y el talento audiovisual">
<meta property="twitter:url" content="https://mavfest-uney.netlify.app">
<meta name="twitter:title" content="Únete a la celebración de la creatividad y el talento audiovisual">
<meta name="twitter:description" content="MavFest 2025 es la 9ª edición del Festival de Cortometrajes de la UNEY que celebra la creatividad y el talento de la comunidad universitaria.">
<meta name="twitter:image" content="https://github.com/Waalito/mavfest-uney-oficial/blob/main/public/images/banner-mavfest.webp?raw=true">
<link rel="canonical" href="https://mavfest-uney.netlify.app/">
<link rel="sitemap" href="/sitemap-index.xml" />


  </head>
  <body>
    <!-- Textures -->
    <GrainTexture />
    <GrungeTexture />
    <MetalTexture />
    <!-- Textures -->
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0 auto;
    max-width: 1600px;
    width: 100%;
    height: 100vh;
    background-color: var(--color-mav-main);
    

  }

  main {
    min-height: 100vh;
    width: 100%;
    overflow-x: hidden;

  }


</style>
